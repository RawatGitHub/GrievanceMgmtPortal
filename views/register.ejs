<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register Student</title>
    <%- include('partials/_headerLinks.ejs') %>
  </head>
  <body>
    <%- include('partials/_header.ejs') %>

    <section class="form-container">
      <form method="POST">
        <h1 class="registerHeading">Register</h1>
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            placeholder="Full Name"
            name="name"
          />
        </div>
        <div class="mb-3">
          <input
            type="email"
            class="form-control"
            placeholder="Email Address"
            name="email"
          />
        </div>
        <div>
          <input
            type="text"
            name="mobile"
            placeholder="Mobile no."
            name="mobile"
          />
        </div>
        <div class="mb-3">
          <input
            type="password"
            class="form-control"
            placeholder="Password"
            name="password"
          />
        </div>
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            placeholder="Programme"
            name="programme"
          />
        </div>

        <div class="err-b">
          <% if(typeof error !== "undefined") { %><span
            class="red validation-err"
            ><%= msg %> </span
          ><% } %>
        </div>

        <button type="submit" class="submitbtn">Register</button>
      </form>
    </section>
  </body>
</html>
