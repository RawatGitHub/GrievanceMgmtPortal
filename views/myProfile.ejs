<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile</title>
    <%- include("partials/_headerLinks.ejs") %>
  </head>
  <body>
    <%- include("partials/_header.ejs") %>

    <div class="student-main">
      <%- include('partials/_studentSidebar.ejs') %>
      <section class="student-myProfile">
        <h1 class="myProfileHeading">My Profile</h1>
        <form method="post" class="profilePageForm">
          <div class="student-details">
            <input type="text" readonly value="<%= student.name %>" disabled />

            <input
              type="email"
              readonly
              value="<%= student.email %>"
              disabled
            />

            <input
              type="text"
              readonly
              value="<%= student.mobile %>"
              disabled
            />

            <input
              type="text"
              readonly
              value="<%= student.programme %>"
              disabled
            />
          </div>
        </form>
      </section>
    </div>
    <%- include("partials/_footer.ejs") %>
  </body>
</html>
